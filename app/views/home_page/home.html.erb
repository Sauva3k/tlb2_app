<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="task_item_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
	<div class="col-md-8">
      <h3>Task List</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Tech-Life Balance</h1>
      <p>
        <%= link_to "Login", login_path, class: "btn btn-lg btn-primary" %>
	    <%= link_to "Create Account", signup_path, class: "btn btn-lg btn-primary" %>
      </p>
  </div>
<% end %>