<% provide(:title, @user.name) %>

<% if current_user.admin? %>
<div class="row">
  <aside class="col-md-4">
     <section class="user_info">
       <%= render 'shared/user_info' %>
     </section>
	 <section>
       <ul>
	     <li><%= link_to "Add new user", signup_path %></li>
		 <li><%= link_to "View all users", users_path %></li>
	   </ul>
	 </section>
	 <% if !current_user?(@user)%>
	   <section class="task_item_form">
         <%= render 'shared/micropost_form' %>
       </section>
	 <% end %>
  </aside>
  <% if !current_user?(@user)%>
    <div class="col-md-8">
      <h3>Task List for <%= @user.name %></h3>
      <%= render 'shared/feed' %>
    </div>
  <% end %>
</div>
<% else %>
  <div class="row">
    <aside class="col-md-4">
       <section class="user_info">
         <%= render 'shared/user_info' %>
        </section>
    </aside>
    <div class="col-md-8">
      <h3>Task List for <%= @user.name %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>

  
