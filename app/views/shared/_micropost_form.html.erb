<%= form_for(@task_item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Add new task" %>
	
	<%= f.label :points %>
	<%= f.text_field :points %>
	
  </div>
  
  <%= f.submit "Add Task", class: "btn btn-primary" %>
<% end %>